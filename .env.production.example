# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control
# Add these to Vercel Dashboard under Settings > Environment Variables

# ==========================================
# SITE CONFIGURATION
# ==========================================
NEXT_PUBLIC_SITE_URL=https://andersoncleaning.com
NEXT_PUBLIC_SITE_NAME="Anderson Cleaning"
NODE_ENV=production

# ==========================================
# SANITY CMS (Production - Read Only)
# ==========================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_READ_TOKEN=your_read_token_here
# For Studio access (admin only):
SANITY_API_WRITE_TOKEN=your_write_token_here

# ==========================================
# GOOGLE SERVICES
# ==========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google reCAPTCHA v3
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# Google Site Verification (for Search Console)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_verification_code

# ==========================================
# MICROSOFT CLARITY
# ==========================================
NEXT_PUBLIC_CLARITY_PROJECT_ID=your_clarity_id

# ==========================================
# EMAIL SERVICES
# ==========================================
# Resend (Primary Email Service)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@andersoncleaning.com
RESEND_TO_EMAIL=info@andersoncleaning.com

# ==========================================
# HUBSPOT CRM
# ==========================================
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_PORTAL_ID=your_portal_id
HUBSPOT_FORM_GUID_QUOTE=your_quote_form_guid
HUBSPOT_FORM_GUID_CONTACT=your_contact_form_guid
HUBSPOT_FORM_GUID_CAREERS=your_careers_form_guid

# ==========================================
# CLOUDFLARE TURNSTILE (Alternative to reCAPTCHA)
# ==========================================
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# ==========================================
# CRISP CHAT
# ==========================================
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id

# ==========================================
# SENTRY ERROR TRACKING
# ==========================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_org_name
SENTRY_PROJECT=anderson-cleaning
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Sentry Environment
SENTRY_ENVIRONMENT=production

# ==========================================
# VERCEL ANALYTICS
# ==========================================
# These are automatically set by Vercel, no need to add manually
# VERCEL_ENV=production
# VERCEL_URL=auto-generated
# VERCEL_GIT_COMMIT_SHA=auto-generated

# ==========================================
# RATE LIMITING & SECURITY
# ==========================================
# Redis/Upstash for rate limiting (optional but recommended)
UPSTASH_REDIS_REST_URL=your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ==========================================
# AI SERVICES (Optional)
# ==========================================
# Google Gemini AI (if using AI features)
GEMINI_API_KEY=your_gemini_api_key

# ==========================================
# DEPLOYMENT NOTES
# ==========================================
# 1. Add all NEXT_PUBLIC_* variables to both Preview and Production
# 2. Server-only secrets (no NEXT_PUBLIC_ prefix) should be Production-only
# 3. Use different API keys for Preview vs Production when possible
# 4. Sanity: Use read-only token for Production, read+write for Preview
# 5. Test all integrations in Preview before promoting to Production
# 6. Keep a backup copy of these values in secure password manager
